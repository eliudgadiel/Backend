<style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .chat-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .chat-box {
            width: 400px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .chat-header {
            padding: 10px;
            background-color: #007bff;
            color: white;
            text-align: center;
            font-weight: bold;
        }

        .chat-messages {
            height: 300px;
            overflow-y: auto;
            padding: 10px;
        }

        .message {
            margin-bottom: 10px;
        }

        .user-message {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-left: 20px;
        }

        .other-user-message {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            margin-right: 20px;
        }

        .message .sender {
            font-weight: bold;
        }

        .message .text {
            margin-top: 5px;
        }

        .chat-input {
            display: flex;
            align-items: center;
            padding: 10px;
            background-color: #f8f9fa;
        }

        .chat-input input {
            flex-grow: 1;
            padding: 8px;
            border: none;
            border-radius: 20px;
            outline: none;
        }

        .chat-input button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 20px;
            cursor: pointer;
        }

        .chat-input button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-box">
            <div class="chat-header">Chat</div>
            <div class="chat-messages" id="history"></div>
            <div class="chat-input">
                <input type="text" id="chatBox" placeholder="Escribe tu mensaje...">
                <button id="sendButton">Enviar</button>
            </div>
        </div>
    </div>
    
</body>

<script src="/socket.io/socket.io.js"></script>
<script>
    // Conecta el cliente a Socket.io
    const socket = io();

    // Función para enviar mensajes
    function sendMessage() {
        const chatBox = document.getElementById('chatBox');
        const message = chatBox.value;
        chatBox.value = '';

        // Envía el mensaje al servidor
        socket.emit('message', message);
    }

    // Maneja el evento de recibir mensajes
    socket.on('message', (message) => {
        const historyContainer = document.getElementById('history');
        const messageElement = document.createElement('div');
        messageElement.textContent = message;
        historyContainer.appendChild(messageElement);
    });

    // Asocia la función `sendMessage` al evento click del botón
    const sendButton = document.getElementById('sendButton');
    sendButton.addEventListener('click', sendMessage);
</script>